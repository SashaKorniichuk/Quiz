@model List<QuizApplication.BLL.ViewModels.CategoryViewModel>
<div class="container shadow p-5">

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Category name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="100%">
                        @item.Name
                    </td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a id="Start" asp-controller="Game" asp-action="Start" asp-route-id="@item.Id" class="btn btn-sm btn-primary" ><i class="bi bi-pencil-square"></i>Start</a>&nbsp;
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
